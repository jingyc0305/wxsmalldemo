.project-list {
  height: 100%;
  width: 100%;
  margin-top: 35px;
}

/* item */

.project-item {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 2px 1px 1px #cccccc;
  padding: 8px;
  margin: 8px;
  position: relative;
}

/* item最外层 默认左右结构 图片-描述 */

/* item右边 上下结构 使用盒子布局felx */

.project-item-right {
  display: flex;
  flex-wrap: wrap;
  margin: 8px;
}

/* item右边底部小标题文字  */

.project-item-subtitle-text {
  margin-left: 10px;
  color: #adadad;
  font-size: 24rpx;
}

.project-item-desc {
  color: #adadad;
  font-size: 24rpx;
  margin-left: 10px;
}

.project-item-title {
  color: #333;
  font-size: 28rpx;
  margin-left: 10px;
}

