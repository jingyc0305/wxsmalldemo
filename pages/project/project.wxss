.project-item-title-desc-container {
  display: flex;
  flex-wrap: wrap;
}

.line {
  width: 100%;
  height: 2rpx;
  background: #adadad;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.no-more-photos {
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 28rpx;
  color: #999;
}
