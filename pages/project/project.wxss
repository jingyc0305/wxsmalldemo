.project-list {
  height: 100%;
  width: 100%;
  margin-top: 35px;
}

/* item */

.project-item {
  border: lightgrey;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  padding: 8px;
}

/* item最外层 默认左右结构 图片-描述 */


/* item右边 上下结构 使用盒子布局felx */

.project-item-right {
  display: flex;
  flex-wrap: wrap;
  margin: 8px;
}

/* item右边底部小标题文字  */

.project-item-subtitle-text {
  margin-left: 8px;
  color: #adadad;
  font-size: 24rpx;
}

.project-item-desc {
  color: #adadad;
  font-size: 24rpx;
}

.project-item-title {
  color: #333;
  font-size: 28rpx;
}

